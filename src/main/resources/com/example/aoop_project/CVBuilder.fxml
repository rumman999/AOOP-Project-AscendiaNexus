<ScrollPane fitToHeight="false" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoop_project.CVBuilderController">
    <VBox spacing="25" style="-fx-background-color: #10231c; -fx-border-radius: 18; -fx-background-radius: 18;">
        <padding>
            <Insets bottom="35" left="45" right="45" top="35" />
        </padding>
        <children>
            <!-- Title Section -->
            <VBox alignment="CENTER" spacing="8" style="-fx-background-color: #10231c;">
                <Text style="-fx-font-size: 38px; -fx-font-weight: bold; -fx-fill: #e67e22;" text="Professional CV Builder">
                    <font>
                        <Font name="Segoe UI Semibold" size="38" />
                    </font>
                </Text>
                <Text style="-fx-font-size: 16px; -fx-fill: white;" text="Create your perfect resume in minutes" />
            </VBox>
            <Separator style="-fx-background-color: #e67e22;" />

            <!-- Personal Information Section -->
            <VBox spacing="18">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="Personal Information" />
                <GridPane hgap="20" maxWidth="Infinity" style="-fx-background-color: #fff4e6; -fx-background-radius: 16; -fx-padding: 28;" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <!-- Row 0: Full Name -->
                    <Label style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;" text="Full Name *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="fullNameField" promptText="John Doe" style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Row 1: Job Title -->
                    <Label style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;" text="Job Title *" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="jobTitleField" promptText="Software Engineer" style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Row 2: Email -->
                    <Label style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;" text="Email Address *" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="emailField" promptText="john.doe@email.com" style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Row 3: Phone -->
                    <Label style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;" text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="phoneField" promptText="+1 (555) 123-4567" style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Row 4: Location -->
                    <Label style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;" text="Location" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="locationField" promptText="New York, NY" style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <!-- Row 5: LinkedIn -->
                    <Label style="-fx-font-size:16px;-fx-text-fill:#2d3748;-fx-font-weight:600;" text="LinkedIn Profile" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="linkedinField" promptText="https://linkedin.com/in/johndoe" style="-fx-background-color:#f8fafc;-fx-border-color:#cbd5e0;-fx-border-radius:8;-fx-background-radius:8;-fx-font-size:15px;-fx-padding:10;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </VBox>

            <!-- Professional Summary Section -->
            <VBox spacing="15">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="Professional Summary" />
                <TextArea fx:id="summaryArea" prefRowCount="4" promptText="Write a compelling 2-3 sentence summary highlighting your key achievements and career goals..." style="-fx-background-color: #fff4e6; -fx-border-color: #cbd5e0; -fx-border-radius: 12; -fx-background-radius: 12; -fx-font-size: 15px; -fx-padding: 15;" wrapText="true" />
            </VBox>

            <!-- Skills Section -->
            <VBox spacing="15">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="Technical Skills" />
                <TextField fx:id="skillsField" promptText="Java, Python, React, Node.js, SQL, AWS..." style="-fx-background-color: #fff4e6; -fx-border-color: #cbd5e0; -fx-border-radius: 12; -fx-background-radius: 12; -fx-font-size: 15px; -fx-padding: 12;" />
            </VBox>

            <!-- Work Experience Section -->
            <VBox spacing="15">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="Work Experience" />
                <TextArea fx:id="experienceArea" prefRowCount="6" promptText="Software Engineer | ABC Company | 2020-Present&#10;â€¢ Developed scalable web applications using React and Node.js&#10;â€¢ Improved system performance by 40%&#10;&#10;Junior Developer | XYZ Corp | 2018-2020&#10;â€¢ Built responsive user interfaces&#10;â€¢ Collaborated with cross-functional teams" style="-fx-background-color: #fff4e6; -fx-border-color: #cbd5e0; -fx-border-radius: 12; -fx-background-radius: 12; -fx-font-size: 15px; -fx-padding: 15;" wrapText="true" />
            </VBox>

            <!-- Education Section -->
            <VBox spacing="15">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="Education" />
                <TextArea fx:id="educationArea" prefRowCount="3" promptText="Bachelor of Computer Science | University Name | 2018&#10;GPA: 3.8/4.0&#10;Relevant Coursework: Data Structures, Algorithms, Database Systems" style="-fx-background-color: #fff4e6; -fx-border-color: #cbd5e0; -fx-border-radius: 12; -fx-background-radius: 12; -fx-font-size: 15px; -fx-padding: 15;" wrapText="true" />
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="25">
                <padding>
                    <Insets bottom="20" top="10" />
                </padding>
                <Button onAction="#Submit" style="-fx-background-color: transparent; -fx-text-fill: #00F270; -fx-font-size: 17px; -fx-border-radius: 14; -fx-padding: 12 28 12 12 28 12 28 28; -fx-cursor: hand; -fx-border-color: #00F270; -fx-border-width: 2;" text=" Generate Professional CV" />
                <Button onAction="#Reset" style="-fx-background-color: transparent; -fx-border-color: #00F270; -fx-border-width: 2; -fx-text-fill: #00F270; -fx-font-size: 17px; -fx-border-radius: 14; -fx-padding: 12 28 12 28; -fx-cursor: hand;" text="ðŸ”„ Clear All Fields" />
            </HBox>

            <HBox centerShape="false" prefHeight="46.0" prefWidth="598.0">
                <children>
                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleDashboard" style="-fx-background-color: transparent; -fx-text-fill: #00F270; -fx-border-radius: 14; -fx-font-size: 17px; -fx-padding: 12 28 12 28; -fx-alignment: center; -fx-border-color: #00F270; -fx-border-width: 2; -fx-cursor: hand;" text="Return to Dashboard" />
                </children>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <padding>
                    <Insets left="615.0" />
                </padding>
            </HBox>
         <HBox prefHeight="30.0" prefWidth="687.0">
            <children>
               <Label fx:id="NotificationLabel" prefHeight="26.0" prefWidth="948.0" style="-fx-text-fill: #00F270; -fx-font-size: 17px; -fx-alignment: center;">
                  <HBox.margin>
                     <Insets left="253.0" />
                  </HBox.margin>
               </Label>
            </children>
         </HBox>
        </children>
    </VBox>
</ScrollPane>

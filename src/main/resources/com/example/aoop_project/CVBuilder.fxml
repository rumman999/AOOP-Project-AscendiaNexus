                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #00F270;" text="Technical Skills" />
                <TextField fx:id="skillsField" promptText="Java, Python, React..." style="-fx-background-color: #1b322b; -fx-text-fill:#ffffff;                                   -fx-prompt-text-fill:#9ea8a3; -fx-border-color:#00F270;                                   -fx-font-size: 15px; -fx-padding: 12;                                   -fx-background-radius:0; -fx-border-radius:0;" text="Java, Python, JavaScript, React, Node.js, SQL, AWS, Git, Agile Methodologies, Web Development" />

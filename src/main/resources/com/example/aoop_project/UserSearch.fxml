<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" styleClass="dialog-header" stylesheets="@stylesheets/UserSearch.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoop_project.Controllers.UserSearchController">

    <children>
        <!-- Top Controls -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="searchField" prefWidth="400" promptText="ðŸ” Search Users..." styleClass="search" stylesheets="@stylesheets/DashboardUI.css" />

            <Button onAction="#handleSearch" prefWidth="58.0" stylesheets="@stylesheets/UserSearch.css" text="Search">
                <HBox.margin>
                    <Insets top="4.0" left="12.0" bottom="4.0" right="0"/>
                </HBox.margin>
            </Button>

            <Button onAction="#handleClear" text="Clear">
                <HBox.margin>
                    <Insets top="4.0" left="5.0" bottom="4.0" right="0"/>
                </HBox.margin>
            </Button>

            <Button onAction="#handleRefresh" stylesheets="@stylesheets/UserSearch.css" text="Refresh">
                <HBox.margin>
                    <Insets top="4.0" left="5.0" bottom="4.0" right="0"/>
                </HBox.margin>
            </Button>

            <Button onAction="#handleExit" styleClass="btn-exit" text="Exit">
                <HBox.margin>
                    <Insets top="4.0" left="5.0" bottom="4.0" right="0"/>
                </HBox.margin>
            </Button>
        </HBox>

        <!-- User Table -->
        <TableView fx:id="userTable" prefHeight="500" prefWidth="740" styleClass="user-table" stylesheets="@stylesheets/UserSearch.css">
            <columns>
                <TableColumn fx:id="colProfile" prefWidth="100" text="Profile" />
                <TableColumn fx:id="colName" prefWidth="200" text="Full Name" />
                <TableColumn fx:id="colEmail" prefWidth="250" text="Email" />
                <TableColumn fx:id="colType" prefWidth="150" text="Account Type" />
                <TableColumn fx:id="colMessage" prefWidth="100" text="Message" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <VBox.margin>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </VBox.margin>
        </TableView>
    </children>
</VBox>

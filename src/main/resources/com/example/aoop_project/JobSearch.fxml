<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoop_project.JobSearchController">
    <top>
        <VBox spacing="10" style="-fx-background-color: #10231c;">
            <padding>
                <Insets bottom="10" left="15" right="15" top="15" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #10231c;">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="labelA" stylesheets="@StyleSheets/admin-job-manager.css" text="Job Search" />
                        <Button onAction="#handleClose" styleClass="viewBtn" text="Close" HBox.hgrow="NEVER">
                            <stylesheets>
                                <URL value="@StyleSheets/admin-job-manager.css" />
                                <URL value="@StyleSheets/DashboardUI.css" />
                            </stylesheets>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <TextField fx:id="fldKeyword" promptText="Keyword" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="fldJobType" promptText="Job Type" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="fldLocation" promptText="Location" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="fldTechStack" promptText="Tech Stack" HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleSearch" text="Search" styleClass="viewBtn" stylesheets="@StyleSheets/DashboardUI.css" />
                        <Button onAction="#handleClear" text="Clear" styleClass="viewBtn" stylesheets="@StyleSheets/DashboardUI.css" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.7" orientation="VERTICAL" style="-fx-background-color: transparent;">
            <items>
                <TableView fx:id="tblResults" prefHeight="351.0" prefWidth="798.0" stylesheets="@StyleSheets/admin-job-manager.css">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colTitle" prefWidth="150.0" text="Title" />
                        <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="colLocation" prefWidth="150.0" text="Location" />
                        <TableColumn fx:id="colTech" prefWidth="150.0" text="Tech Stack" />
                        <TableColumn fx:id="colPosted" prefWidth="150.0" text="Posted At" />
                        <TableColumn fx:id="colAction" prefWidth="100.0" text="Apply" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <VBox prefHeight="150.0" prefWidth="798.0" spacing="10" style="-fx-background-color: #10231c;">
                    <padding>
                        <Insets bottom="10" left="15" right="15" top="10" />
                    </padding>
                    <children>
                        <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00F270;" text="Create your own CV in seconds!" />

                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" styleClass="labelA" stylesheets="@StyleSheets/admin-job-manager.css" text="Upload your CV:" />
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <children>
                                <Button onAction="#handleUploadCv" text="Select CV File" styleClass="viewBtn" stylesheets="@StyleSheets/DashboardUI.css" />

                                <Button onAction="#handleCV" text="Create CV" styleClass="viewBtn" stylesheets="@StyleSheets/DashboardUI.css" />

                                <Label fx:id="lblCvFileName" text="No file selected" styleClass="labelA" stylesheets="@StyleSheets/admin-job-manager.css" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
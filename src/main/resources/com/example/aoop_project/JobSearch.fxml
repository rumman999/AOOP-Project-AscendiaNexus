<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aoop_project.JobSearchController">

    <top>
        <HBox spacing="10" style="-fx-background-color: #10231c;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Button onAction="#handleClose" styleClass="DelButton" stylesheets="@StyleSheets/admin-job-manager.css" text="Close">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin></Button>
                <Label style="-fx-font-size: 30; -fx-font-weight: bold;" text="Job Search" textFill="#e67e22">
                    <HBox.margin>
                        <Insets left="12.0" top="2.5" />
                    </HBox.margin></Label>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-background-color: #10231c;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <HBox spacing="8">
                <TextField fx:id="fldKeyword" promptText="Keyword" style="-fx-background-color: #FFF7E0; -fx-font-size: 15;" />
                <TextField fx:id="fldJobType" promptText="Job Type" style="-fx-background-color: #FFF7E0; -fx-font-size: 15;" />
                <TextField fx:id="fldLocation" promptText="Location" style="-fx-background-color: #FFF7E0; -fx-font-size: 15;" />
                <TextField fx:id="fldTechStack" promptText="Tech Stack" style="-fx-background-color: #FFF7E0; -fx-font-size: 15;" />
                <Button onAction="#handleSearch" prefHeight="31.0" prefWidth="59.0" styleClass="viewBtn" text="Search">
                    <stylesheets>
                        <URL value="@StyleSheets/admin-job-manager.css" />
                        <URL value="@StyleSheets/DashboardUI.css" />
                    </stylesheets></Button>
                <Button onAction="#handleClear" prefHeight="31.0" prefWidth="51.0" style="-fx-background-color: orange;" styleClass="viewBtn" text="Clear">
                    <stylesheets>
                        <URL value="@StyleSheets/admin-job-manager.css" />
                        <URL value="@StyleSheets/DashboardUI.css" />
                    </stylesheets>
                </Button>
            </HBox>

            <TableView fx:id="tblResults" stylesheets="@StyleSheets/admin-job-manager.css" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colTitle" prefWidth="200" text="Title" />
                    <TableColumn fx:id="colType" prefWidth="120" text="Job Type" />
                    <TableColumn fx:id="colLocation" prefWidth="120" text="Location" />
                    <TableColumn fx:id="colTech" prefWidth="150" text="Tech Stack" />
                    <TableColumn fx:id="colPosted" prefWidth="150" text="Posted At" />
                    <TableColumn fx:id="colAction" prefWidth="100" text="Action" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
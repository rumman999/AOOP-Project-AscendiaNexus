            <content>
                <VBox prefWidth="1450.0" spacing="20" style="-fx-background-color: #10231c;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <VBox spacing="15" style="-fx-background-color: #1a2f26; -fx-background-radius: 15; -fx-padding: 25;">

                </VBox>
                <VBox alignment="CENTER_LEFT">
                    <Label fx:id="followingLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #eeeeee;" text="0" />
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #aaaaaa;" text="Following" />
                </VBox>
                <VBox alignment="CENTER_LEFT">
                    <Label fx:id="coinsLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #eeeeee;" text="0" />
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #aaaaaa;" text="Coins" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="followLabel" style="-fx-font-size: 16px; -fx-text-fill: #00f270; -fx-border-color: #00f270; -fx-border-width: 2; -fx-padding: 5 20 5 20; -fx-border-radius: 12px; -fx-cursor: hand;" text="Follow" />

